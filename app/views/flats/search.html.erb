<div class="container p-5 m-5 shadow bg-white rounded">
  <h1>Our Flats</h1>
  <p>You searched for <%= @query %>. We found <%= @flats_found.count %> flats out of our <%= @flats.count %> on our website</p>
  <div class="row">
    <%@flats_found.each do |flat|%>
    <div class="col-3 card m-1 p-1">
      <%= image_tag "#{flat.picture_url}", class:"h-50"%>
      <h5 class="m-1"> <%= flat.name%> </h5>
      <p class="m-1"> <%= flat.address%> </p>
      <span>
        <%= flat.price_per_night%> |
        <%= flat.number_of_guests%>
      </span>
    </div>
    <%end%>
    <%= link_to 'Back', flats_path, class: "btn btn-primary btn-lg text-light" %>
  </div>
</div>
