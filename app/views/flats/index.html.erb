<div class="container p-5 m-5 shadow bg-white rounded">
    <nav class="text-start">Simple Airbnb</nav>

    <h4 class="text-end sticky-top"><%= link_to 'Create a new flat', new_flat_path %></h4>
    <div class="">
    <div class="d-grid gap-1 p-5 names">
    <% @flats.each do |flat|  %>
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 p-2 bg-light border rounded"><h5><%= link_to flat.name, flat_path(flat) %></h5>
      <p><%= flat.name %></p>
      <p><%= flat.address %></p>
      <p><%= flat.description %></p>
      <p><%= flat.price_per_night %></p>
      <p><%= flat.number_of_guests %></p>
      </div>
    <% end %>
    </div>
    </div>
</div>
